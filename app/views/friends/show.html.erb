<div class="bg-light bg-gradient px-5 py-5 my-5 shadow-sm">
  <h1 class="display-1 mb-3">
    <%= @friend.first_name %> <%= @friend.last_name %>
    <small class="text-muted display-6 ms-2">(<%= @friend.age %>)</small>
  </h1>

  <p class="display-6 text-dark my-5">
    <%= @friend.email %> | <%= @friend.phone %> | <%= @friend.twitter %>
  </p>

  <%= link_to 'Edit', edit_friend_path(@friend), class:"btn btn-secondary" %> |
  <%= link_to 'Back', friends_path, class:"btn btn-secondary" %>
</div>
